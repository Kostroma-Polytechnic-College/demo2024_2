<Page x:Class="WpfApp2.Pages.Registration"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp2.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="300"
      Title="Registration">

    <Grid>
        <StackPanel>
            <Label Content="Логин" />
            <TextBox x:Name="username" />
            <Label Content="Пароль" />
            <PasswordBox x:Name="password" />
            <Label Content="Подтвердите пароль"/>
            <PasswordBox x:Name="confirmPassword"/>
            <Button x:Name="registration" Content="Зарегистрироваться" Click="registration_Click"/>
            <Button x:Name="cancel" Content="Отмена" Click="cancel_Click"/>
        </StackPanel>
    </Grid>
</Page>
